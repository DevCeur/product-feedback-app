generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SuggestionStatus {
  IDLE
  PLANNED
  IN_PROGRESS
  LIVE
}

model User {
  id          String           @id @default(uuid())
  name        String
  username    String           @unique
  email       String           @unique
  password    String
  avatar      String
  projects    Project[]
  suggestions Suggestion[]
  votes       suggestionVote[]
  comments    Comment[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @default(now()) @updatedAt
}

model Project {
  id                   String               @id @default(uuid())
  name                 String
  user                 User                 @relation(fields: [userId], references: [id])
  userId               String
  suggestions          Suggestion[]
  suggestionCategories SuggestionCategory[]
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @default(now()) @updatedAt
}

model SuggestionCategory {
  id          String       @id @default(uuid())
  title       String
  project     Project?     @relation(fields: [projectId], references: [id])
  projectId   String?
  suggestions Suggestion[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now()) @updatedAt
}

model suggestionVote {
  id           String     @id @default(uuid())
  user         User       @relation(fields: [userId], references: [id])
  userId       String
  suggestion   Suggestion @relation(fields: [suggestionId], references: [id])
  suggestionId String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @default(now()) @updatedAt
}

model Suggestion {
  id          String              @id @default(uuid())
  title       String
  description String
  project     Project?            @relation(fields: [projectId], references: [id])
  projectId   String?
  user        User?               @relation(fields: [userId], references: [id])
  userId      String?
  status      SuggestionStatus    @default(IDLE)
  votes       Int
  votedBy     suggestionVote[]
  category    SuggestionCategory? @relation(fields: [categoryId], references: [id])
  categoryId  String?
  comments    Comment[]
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @default(now()) @updatedAt
}

model Comment {
  id           String     @id @default(uuid())
  message      String
  user         User       @relation(fields: [userId], references: [id])
  userId       String
  suggestion   Suggestion @relation(fields: [suggestionId], references: [id])
  suggestionId String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @default(now()) @updatedAt
}
